<Window x:Class="GostControl.AppWindows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Стиль для переключателей -->
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border Background="Transparent">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Визуальный переключатель -->
                                <Border x:Name="switchBorder" 
                                        Grid.Column="0"
                                        Width="52" 
                                        Height="28" 
                                        Background="#E0E0E0" 
                                        CornerRadius="14"
                                        Margin="0,0,15,0">
                                    <Border x:Name="switchKnob" 
                                            Width="24" 
                                            Height="24" 
                                            Background="White" 
                                            CornerRadius="12"
                                            HorizontalAlignment="Left"
                                            Margin="2"/>
                                </Border>

                                <!-- Контент (текст) -->
                                <ContentPresenter Grid.Column="1" 
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="switchBorder" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="switchKnob" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="switchKnob" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок -->
        <Style x:Key="SettingsButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                                <Setter Property="Foreground" Value="#757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Хедер -->
        <Border Grid.Row="0" Background="#2196F3" Height="70">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Иконка -->
                <Border Grid.Column="0" Width="40" Height="40" 
                        Background="White" CornerRadius="20"
                        VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="⚙️" 
                               FontSize="20" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Заголовок -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                    <TextBlock Text="Настройки системы" 
                               Foreground="White" 
                               FontSize="20" 
                               FontWeight="Bold"/>
                    <TextBlock Text="Настройте параметры приложения" 
                               Foreground="#E3F2FD" 
                               FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Border Grid.Row="1" Background="White" Margin="20" CornerRadius="8"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="25">
                <StackPanel>

                    <!-- Общие настройки -->
                    <Border Background="#F5F9FF" 
                            CornerRadius="6" 
                            Padding="18,15" 
                            Margin="0,0,0,18">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="🔧" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Общие настройки" 
                                           Foreground="#1976D2"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Автоматическое обновление -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <CheckBox x:Name="AutoRefreshCheckBox" 
                                          Style="{StaticResource ToggleSwitchStyle}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,15,0"/>
                                <StackPanel>
                                    <TextBlock Text="Автоматическое обновление" 
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Автоматически обновлять список клиентов каждые 5 минут" 
                                               Foreground="#757575"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               Margin="0,5,0,0"
                                               MaxWidth="400"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Подтверждение удаления -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <CheckBox x:Name="ConfirmDeleteCheckBox" 
                                          Style="{StaticResource ToggleSwitchStyle}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,15,0"
                                          IsChecked="True"/>
                                <StackPanel>
                                    <TextBlock Text="Подтверждение удаления" 
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Запрашивать подтверждение при удалении клиентов" 
                                               Foreground="#757575"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               Margin="0,5,0,0"
                                               MaxWidth="400"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Двойной клик для редактирования -->
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="DoubleClickEditCheckBox" 
                                          Style="{StaticResource ToggleSwitchStyle}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,15,0"
                                          IsChecked="True"/>
                                <StackPanel>
                                    <TextBlock Text="Редактирование двойным кликом" 
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Открывать редактирование клиента по двойному клику" 
                                               Foreground="#757575"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               Margin="0,5,0,0"
                                               MaxWidth="400"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Настройки отображения -->
                    <Border Background="#F5F5FF" 
                            CornerRadius="6" 
                            Padding="18,15" 
                            Margin="0,0,0,18">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="👁️" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Настройки отображения" 
                                           Foreground="#5C6BC0"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Количество строк на странице -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Количество клиентов на странице" 
                                           Foreground="#424242"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <ComboBox x:Name="PageSizeComboBox" 
                                          Height="40" 
                                          Padding="10"
                                          FontSize="14"
                                          VerticalContentAlignment="Center">
                                    <ComboBoxItem Content="10"/>
                                    <ComboBoxItem Content="25" IsSelected="True"/>
                                    <ComboBoxItem Content="50"/>
                                    <ComboBoxItem Content="100"/>
                                    <ComboBoxItem Content="Все"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Сортировка по умолчанию -->
                            <StackPanel>
                                <TextBlock Text="Сортировка по умолчанию" 
                                           Foreground="#424242"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <ComboBox x:Name="SortByComboBox" 
                                          Height="40" 
                                          Padding="10"
                                          FontSize="14"
                                          VerticalContentAlignment="Center">
                                    <ComboBoxItem Content="По дате регистрации (новые первые)"/>
                                    <ComboBoxItem Content="По фамилии (А-Я)" IsSelected="True"/>
                                    <ComboBoxItem Content="По фамилии (Я-А)"/>
                                    <ComboBoxItem Content="По ID (возрастание)"/>
                                    <ComboBoxItem Content="По ID (убывание)"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Уведомления -->
                    <Border Background="#FFF5F5" 
                            CornerRadius="6" 
                            Padding="18,15" 
                            Margin="0,0,0,18">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="🔔" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Уведомления" 
                                           Foreground="#D32F2F"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Звуковые уведомления -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <CheckBox x:Name="SoundNotificationsCheckBox" 
                                          Style="{StaticResource ToggleSwitchStyle}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,15,0"/>
                                <StackPanel>
                                    <TextBlock Text="Звуковые уведомления" 
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Воспроизводить звук при уведомлениях" 
                                               Foreground="#757575"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               Margin="0,5,0,0"
                                               MaxWidth="400"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Email уведомления -->
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="EmailNotificationsCheckBox" 
                                          Style="{StaticResource ToggleSwitchStyle}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,15,0"/>
                                <StackPanel>
                                    <TextBlock Text="Email уведомления" 
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="Отправлять уведомления по email" 
                                               Foreground="#757575"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               Margin="0,5,0,0"
                                               MaxWidth="400"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Информация о системе -->
                    <Border Background="#F5FFF7" 
                            CornerRadius="6" 
                            Padding="18,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="💻" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Информация о системе" 
                                           Foreground="#388E3C"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Версия приложения" 
                                               Foreground="#757575"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="1.0.0" 
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="База данных" 
                                               Foreground="#757575"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="MS SQL" 
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>

                            <StackPanel Margin="0,15,0,0">
                                <TextBlock Text="Путь к базе данных" 
                                           Foreground="#757575"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="???" 
                                           Foreground="#424242"
                                           FontSize="14"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Кнопки действий -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" 
                        Content="Сохранить" 
                        Style="{StaticResource SettingsButton}"
                        Click="SaveButton_Click"
                        Margin="0,0,15,0"/>

                <Button Grid.Column="2" 
                        Content="Закрыть" 
                        Style="{StaticResource SettingsButton}"
                        Background="#F5F5F5"
                        Foreground="#424242"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>