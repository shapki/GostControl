<Window x:Class="GostControl.AppWindows.EditClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Редактирование клиента" 
        Height="700" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#F5F5F5"
        FontFamily="Segoe UI"
        MinHeight="650" MinWidth="550">

    <Window.Resources>
        <!-- Стиль для заголовков полей -->
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Стиль для обязательных полей -->
        <Style x:Key="RequiredFieldLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource FieldLabelStyle}">
            <Setter Property="Foreground" Value="#D32F2F"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="Validation.HasError" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#F44336"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для DatePicker -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="12,0,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="#F44336"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопок -->
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                                <Setter Property="Foreground" Value="#757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки отмены -->
        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource DialogButton}">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Валидация -->
        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F44336"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Хедер -->
        <Border Grid.Row="0" Height="80">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2196F3" Offset="0"/>
                    <GradientStop Color="#1976D2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Иконка -->
                <Border Grid.Column="0" 
                        Width="48" 
                        Height="48" 
                        Background="White" 
                        CornerRadius="24"
                        VerticalAlignment="Center" 
                        Margin="25,0">
                    <Viewbox Width="28" Height="28">
                        <TextBlock Text="👤" 
                           FontSize="24" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
                    </Viewbox>
                </Border>

                <!-- Заголовок -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock Text="Редактирование клиента" 
                               Foreground="White" 
                               FontSize="22" 
                               FontWeight="Bold"/>
                    <TextBlock Text="Обновите информацию о клиенте" 
                               Foreground="#E3F2FD" 
                               FontSize="14"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- ID клиента -->
                <Border Grid.Column="2" 
                        Background="#1565C0" 
                        CornerRadius="4"
                        Padding="12,6"
                        VerticalAlignment="Center"
                        Margin="0,0,25,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ID:" 
                                   Foreground="#E3F2FD" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,5,0"/>
                        <TextBlock x:Name="ClientIdText" 
                                   Text="000" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   FontSize="16"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Форма -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="20,20,20,20" 
                CornerRadius="8"
                BorderBrush="#E0E0E0" 
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="30">
                <StackPanel>

                    <!-- Личные данные -->
                    <Border Background="#F5F9FF" 
                            CornerRadius="6" 
                            Padding="20,15" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="👤 Личные данные" 
                                       Style="{StaticResource FieldLabelStyle}"
                                       FontSize="16"
                                       Foreground="#1976D2"/>

                            <Grid Margin="0,10,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Фамилия -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                                    <TextBlock Text="Фамилия *" Style="{StaticResource RequiredFieldLabelStyle}"/>
                                    <TextBox x:Name="LastNameTextBox" 
                                             Style="{StaticResource ModernTextBox}"/>
                                    <TextBlock x:Name="LastNameError" 
                                               Style="{StaticResource ErrorTextStyle}"
                                               Text="Фамилия обязательна для заполнения"/>
                                </StackPanel>

                                <!-- Имя -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                                    <TextBlock Text="Имя *" Style="{StaticResource RequiredFieldLabelStyle}"/>
                                    <TextBox x:Name="FirstNameTextBox" 
                                             Style="{StaticResource ModernTextBox}"/>
                                    <TextBlock x:Name="FirstNameError" 
                                               Style="{StaticResource ErrorTextStyle}"
                                               Text="Имя обязательно для заполнения"/>
                                </StackPanel>

                                <!-- Отчество -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
                                    <TextBlock Text="Отчество" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox x:Name="MiddleNameTextBox" 
                                             Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <!-- Дата рождения -->
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,15">
                                    <TextBlock Text="Дата рождения" Style="{StaticResource FieldLabelStyle}"/>
                                    <DatePicker x:Name="BirthDatePicker" 
                                                Style="{StaticResource ModernDatePicker}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Контактная информация -->
                    <Border Background="#FFF5F5" 
                            CornerRadius="6" 
                            Padding="20,15" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="📞 Контактная информация" 
                                       Style="{StaticResource FieldLabelStyle}"
                                       FontSize="16"
                                       Foreground="#D32F2F"/>

                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="Телефон *" Style="{StaticResource RequiredFieldLabelStyle}"/>
                                <TextBox x:Name="PhoneTextBox" 
                                         Style="{StaticResource ModernTextBox}"/>
                                <TextBlock x:Name="PhoneError" 
                                           Style="{StaticResource ErrorTextStyle}"
                                           Text="Введите корректный номер телефона"/>
                            </StackPanel>

                            <StackPanel Margin="0,15,0,0">
                                <TextBlock Text="Email" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox x:Name="EmailTextBox" 
                                         Style="{StaticResource ModernTextBox}"/>
                                <TextBlock x:Name="EmailError" 
                                           Style="{StaticResource ErrorTextStyle}"
                                           Text="Введите корректный email"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Паспортные данные -->
                    <Border Background="#F5FFF7" 
                            CornerRadius="6" 
                            Padding="20,15" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="📄 Паспортные данные" 
                                       Style="{StaticResource FieldLabelStyle}"
                                       FontSize="16"
                                       Foreground="#388E3C"/>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Серия паспорта" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox x:Name="PassportSeriesTextBox" 
                                             Style="{StaticResource ModernTextBox}"
                                             MaxLength="4"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Номер паспорта" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox x:Name="PassportNumberTextBox" 
                                             Style="{StaticResource ModernTextBox}"
                                             MaxLength="6"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Статистика -->
                    <Border Background="#FFF8E1" 
                            CornerRadius="6" 
                            Padding="20,15" 
                            Margin="0,0,0,25">
                        <StackPanel>
                            <TextBlock Text="📊 Статистика" 
                                       Style="{StaticResource FieldLabelStyle}"
                                       FontSize="16"
                                       Foreground="#F57C00"/>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Дата регистрации" 
                                               Style="{StaticResource FieldLabelStyle}"
                                               Foreground="#757575"
                                               FontSize="13"/>
                                    <TextBlock x:Name="RegistrationDateText" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Margin="0,5,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Бронирований" 
                                               Style="{StaticResource FieldLabelStyle}"
                                               Foreground="#757575"
                                               FontSize="13"/>
                                    <TextBlock x:Name="BookingsCountText" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Подсказка -->
                    <Border Background="#F3E5F5" 
                            CornerRadius="6" 
                            Padding="15" 
                            Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💡" 
                                       FontSize="16" 
                                       Margin="0,0,10,0" 
                                       VerticalAlignment="Top"/>
                            <TextBlock Text="Поля, отмеченные звёздочкой (*), обязательны для заполнения. Изменения будут сохранены после нажатия кнопки 'Сохранить'." 
                               TextWrapping="Wrap"
                               Foreground="#7B1FA2"
                               FontSize="13"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Кнопки действий -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Подсказка -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="*" 
                               Foreground="#D32F2F" 
                               FontWeight="Bold"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="обязательные поля" 
                               Foreground="#757575" 
                               VerticalAlignment="Center"
                               FontSize="13"/>
                </StackPanel>

                <!-- Кнопка сохранения -->
                <Button Grid.Column="1" 
                    Content="💾 Сохранить" 
                    Style="{StaticResource DialogButton}"
                    x:Name="SaveButton"
                    Margin="0,0,15,0"/>

                <!-- Кнопка отмены -->
                <Button Grid.Column="2" 
                    Content="✕ Отмена" 
                    Style="{StaticResource CancelButton}"
                    x:Name="CancelButton"/>
            </Grid>
        </Border>

    </Grid>
</Window>