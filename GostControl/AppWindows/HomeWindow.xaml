<Window x:Class="GostControl.AppWindows.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ГостКонтроль - Главная" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        MinWidth="800"
        MinHeight="600"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Стили для кнопок -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                                <Setter Property="Foreground" Value="#757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для навигационных кнопок -->
        <Style x:Key="NavButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#4CAF50"/>
        </Style>

        <!-- Стиль для кнопок в хедере -->
        <Style x:Key="HeaderButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Хедер -->
        <Border Grid.Row="0" Background="#2196F3" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и название -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Image Source="/Resources/logo.png"
                           Width="32" 
                           Height="32" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                    <TextBlock Text="ГОСТКОНТРОЛЬ" 
                               Foreground="White" 
                               FontSize="22" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Навигация в хедере -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                    <Button Content="📊 Статистика" 
                            Style="{StaticResource HeaderButton}" 
                            Margin="0,0,10,0"/>
                    <Button Content="⚙️ Настройки" 
                            Style="{StaticResource HeaderButton}"
                            Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Приветствие -->
            <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Добро пожаловать в систему ГостКонтроль" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Выберите раздел для работы" 
                               FontSize="16" 
                               Foreground="#666"/>
                </StackPanel>
            </Border>

            <!-- Навигационные кнопки -->
            <Border Grid.Row="1" Background="White" CornerRadius="8"
                    BorderBrush="#E0E0E0" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <WrapPanel Margin="20" HorizontalAlignment="Center">

                        <!-- Клиенты -->
                        <Button Content="👥 Клиенты" 
                                Style="{StaticResource NavButton}"
                                Click="ClientsButton_Click"
                                Background="#2196F3"
                                ToolTip="Управление клиентами">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Клиенты" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1976D2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Номера -->
                        <Button Content="🏨 Номера" 
                                Style="{StaticResource NavButton}"
                                Click="RoomsButton_Click"
                                Background="#4CAF50"
                                ToolTip="Управление номерами">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="🏨" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Номера" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#388E3C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Бронирования -->
                        <Button Content="📅 Бронирования" 
                                Style="{StaticResource NavButton}"
                                Click="BookingsButton_Click"
                                Background="#FF9800"
                                ToolTip="Управление бронированиями">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="📅" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Бронирования" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F57C00"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Заселения -->
                        <Button Content="🚪 Заселения" 
                                Style="{StaticResource NavButton}"
                                Click="CheckInsButton_Click"
                                Background="#9C27B0"
                                ToolTip="Управление заселениями">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="🚪" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Заселения" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#7B1FA2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Выселения -->
                        <Button Content="🚶 Выселения" 
                                Style="{StaticResource NavButton}"
                                Click="CheckOutsButton_Click"
                                Background="#F44336"
                                ToolTip="Управление выселениями">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="🚶" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Выселения" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D32F2F"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Услуги -->
                        <Button Content="💼 Услуги" 
                                Style="{StaticResource NavButton}"
                                Click="ServicesButton_Click"
                                Background="#607D8B"
                                ToolTip="Управление услугами">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="💼" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Услуги" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#455A64"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Платежи -->
                        <Button Content="💰 Платежи" 
                                Style="{StaticResource NavButton}"
                                Click="PaymentsButton_Click"
                                Background="#795548"
                                ToolTip="Управление платежами">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Платежи" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#5D4037"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Отчеты -->
                        <Button Content="📊 Отчеты" 
                                Style="{StaticResource NavButton}"
                                Click="ReportsButton_Click"
                                Background="#009688"
                                ToolTip="Просмотр отчетов">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="📊" FontSize="24" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Отчеты" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#00796B"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </WrapPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Футер -->
        <Border Grid.Row="2" Background="#424242" Height="40">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="© 2025 ГостКонтроль - Система управления гостиницей" 
                           Foreground="#BDBDBD" 
                           VerticalAlignment="Center" 
                           Margin="20,0"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Версия 1.0.0" 
                               Foreground="#BDBDBD" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="•" 
                               Foreground="#BDBDBD" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="Главная страница" 
                               Foreground="#4CAF50" 
                               VerticalAlignment="Center"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>