<Window x:Class="GostControl.AppWindows.AddEditClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление/Редактирование клиента" 
        Height="650" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Стиль для заголовков полей -->
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для DatePicker -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <DatePickerTextBox x:Name="PART_TextBox"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   Padding="10"
                                                   Background="Transparent"
                                                   BorderThickness="0"/>

                                <Button x:Name="PART_Button"
                                        Grid.Column="1"
                                        Width="40"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Content="📅"
                                        FontSize="16"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок -->
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                                <Setter Property="Foreground" Value="#757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки отмены -->
        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource DialogButton}">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Хедер -->
        <Border Grid.Row="0" Background="#2196F3" Height="70">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Иконка -->
                <Border Grid.Column="0" Width="40" Height="40" 
                        Background="White" CornerRadius="20"
                        VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="👤" 
                               FontSize="20" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Заголовок -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                    <TextBlock x:Name="TitleText" 
                               Text="Добавление клиента" 
                               Foreground="White" 
                               FontSize="20" 
                               FontWeight="Bold"/>
                    <TextBlock Text="Заполните информацию о клиенте" 
                               Foreground="#E3F2FD" 
                               FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Форма -->
        <Border Grid.Row="1" Background="White" Margin="20" CornerRadius="8"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
                <StackPanel>

                    <!-- Личные данные -->
                    <TextBlock Text="Личные данные" 
                               Style="{StaticResource FieldLabelStyle}"
                               FontSize="16"
                               Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Фамилия -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,20">
                            <TextBlock Text="Фамилия *" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="LastNameTextBox" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Имя -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,20">
                            <TextBlock Text="Имя *" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="FirstNameTextBox" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Отчество -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,20">
                            <TextBlock Text="Отчество" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="MiddleNameTextBox" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Дата рождения -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,20">
                            <TextBlock Text="Дата рождения" Style="{StaticResource FieldLabelStyle}"/>
                            <DatePicker x:Name="BirthDatePicker" Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Контактная информация -->
                    <TextBlock Text="Контактная информация" 
                               Style="{StaticResource FieldLabelStyle}"
                               FontSize="16"
                               Margin="0,20,0,20"/>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Телефон *" Style="{StaticResource FieldLabelStyle}"/>
                        <TextBox x:Name="PhoneTextBox" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Email" Style="{StaticResource FieldLabelStyle}"/>
                        <TextBox x:Name="EmailTextBox" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Паспортные данные -->
                    <TextBlock Text="Паспортные данные" 
                               Style="{StaticResource FieldLabelStyle}"
                               FontSize="16"
                               Margin="0,20,0,20"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Серия паспорта" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="PassportSeriesTextBox" 
                                     Style="{StaticResource ModernTextBox}"
                                     MaxLength="4"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Номер паспорта" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="PassportNumberTextBox" 
                                     Style="{StaticResource ModernTextBox}"
                                     MaxLength="6"/>
                        </StackPanel>
                    </Grid>

                    <!-- Подсказка -->
                    <Border Background="#E3F2FD" CornerRadius="4" Padding="15" Margin="0,30,0,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💡" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Top"/>
                            <TextBlock Text="Поля, отмеченные звёздочкой (*), являются обязательными для заполнения. 
Убедитесь, что все данные введены корректно перед сохранением." 
                                       TextWrapping="Wrap"
                                       Foreground="#1976D2"
                                       FontSize="13"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Кнопки действий -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="* - обязательные поля" 
                           Foreground="#757575" 
                           VerticalAlignment="Center"
                           FontSize="13"/>

                <Button Grid.Column="1" 
                        Content="Сохранить" 
                        Style="{StaticResource DialogButton}"
                        Click="SaveButton_Click"
                        Margin="0,0,15,0"/>

                <Button Grid.Column="2" 
                        Content="Отмена" 
                        Style="{StaticResource CancelButton}"
                        Click="CancelButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>