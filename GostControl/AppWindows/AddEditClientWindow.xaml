<Window x:Class="GostControl.AppWindows.AddEditClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление/Редактирование клиента" 
        Height="700" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Хедер -->
        <Border Grid.Row="0" Background="#2196F3" Height="70">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Иконка -->
                <Border Grid.Column="0" Width="40" Height="40" 
                        Background="White" CornerRadius="20"
                        VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="👤" 
                               FontSize="20" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Заголовок -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                    <TextBlock x:Name="TitleText" 
                               Text="Добавление клиента" 
                               Foreground="White" 
                               FontSize="20" 
                               FontWeight="Bold"/>
                    <TextBlock Text="Заполните информацию о клиенте" 
                               Foreground="#E3F2FD" 
                               FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Форма -->
        <Border Grid.Row="1" Background="White" Margin="20" CornerRadius="8"
                BorderBrush="#E0E0E0" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="25">
                <StackPanel>

                    <!-- Личные данные -->
                    <Border Background="#F5F9FF" 
                            CornerRadius="6" 
                            Padding="18,15" 
                            Margin="0,0,0,18">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="👤" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Личные данные" 
                                           Foreground="#1976D2"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Фамилия -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Фамилия" 
                                                   Foreground="#424242"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,5,5"/>
                                        <TextBlock Text="*" 
                                                   Foreground="#D32F2F"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,5"/>
                                    </StackPanel>
                                    <TextBox x:Name="LastNameTextBox" 
                                             Background="White"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1"
                                             Height="40"
                                             Padding="10"
                                             FontSize="14"
                                             VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <!-- Имя -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Имя" 
                                                   Foreground="#424242"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,5,5"/>
                                        <TextBlock Text="*" 
                                                   Foreground="#D32F2F"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,5"/>
                                    </StackPanel>
                                    <TextBox x:Name="FirstNameTextBox" 
                                             Background="White"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1"
                                             Height="40"
                                             Padding="10"
                                             FontSize="14"
                                             VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <!-- Отчество -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
                                    <TextBlock Text="Отчество" 
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>
                                    <TextBox x:Name="MiddleNameTextBox" 
                                             Background="White"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1"
                                             Height="40"
                                             Padding="10"
                                             FontSize="14"
                                             VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <!-- Дата рождения -->
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,15">
                                    <TextBlock Text="Дата рождения" 
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>
                                    <DatePicker x:Name="BirthDatePicker"
                                                Background="White"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="1"
                                                Height="40"
                                                Padding="10"
                                                FontSize="14"
                                                VerticalContentAlignment="Center"
                                                SelectedDateFormat="Short"
                                                IsTodayHighlighted="True"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Контактная информация -->
                    <Border Background="#F5F5FF" 
                            CornerRadius="6" 
                            Padding="18,15" 
                            Margin="0,0,0,18">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="📞" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Контактная информация" 
                                           Foreground="#5C6BC0"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,15">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Телефон" 
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Margin="0,0,5,5"/>
                                    <TextBlock Text="*" 
                                               Foreground="#D32F2F"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Margin="0,0,0,5"/>
                                </StackPanel>
                                <TextBox x:Name="PhoneTextBox" 
                                         Background="White"
                                         BorderBrush="#E0E0E0"
                                         BorderThickness="1"
                                         Height="40"
                                         Padding="10"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Email" 
                                           Foreground="#424242"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="EmailTextBox" 
                                         Background="White"
                                         BorderBrush="#E0E0E0"
                                         BorderThickness="1"
                                         Height="40"
                                         Padding="10"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Паспортные данные -->
                    <Border Background="#F7FFF5" 
                            CornerRadius="6" 
                            Padding="18,15" 
                            Margin="0,0,0,18">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="📄" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Паспортные данные" 
                                           Foreground="#388E3C"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Серия паспорта" 
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>
                                    <TextBox x:Name="PassportSeriesTextBox" 
                                             Background="White"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1"
                                             Height="40"
                                             Padding="10"
                                             FontSize="14"
                                             VerticalContentAlignment="Center"
                                             MaxLength="4"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Номер паспорта" 
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>
                                    <TextBox x:Name="PassportNumberTextBox" 
                                             Background="White"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1"
                                             Height="40"
                                             Padding="10"
                                             FontSize="14"
                                             VerticalContentAlignment="Center"
                                             MaxLength="6"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Информация о регистрации (только для редактирования) -->
                    <Border x:Name="RegistrationInfoBorder"
                            Background="#FFF8E1" 
                            CornerRadius="6" 
                            Padding="18,15" 
                            Margin="0,0,0,18"
                            Visibility="Collapsed">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="📊" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Информация о регистрации" 
                                           Foreground="#F57C00"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Дата регистрации" 
                                               Foreground="#757575"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="RegistrationDateText"
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="ID клиента" 
                                               Foreground="#757575"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="ClientIdText"
                                               Foreground="#424242"
                                               FontSize="14"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Кнопки действий -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="* - обязательные поля" 
                           Foreground="#757575" 
                           VerticalAlignment="Center"
                           FontSize="13"/>

                <Button Grid.Column="1" 
                        Content="Сохранить" 
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Height="44"
                        Width="120"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Click="SaveButton_Click"
                        Margin="0,0,15,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Grid.Column="2" 
                        Content="Отмена" 
                        Background="#F5F5F5"
                        Foreground="#424242"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Height="44"
                        Width="120"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Click="CancelButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>